<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"    
    tools:context=".TeamsActivity"
    android:background="@drawable/backrepeat" >  
	
    <fragment
        android:id="@+id/teams_list_view_fragment"
        android:name="com.sokolovskiy.ukrbasketsuperleague.TeamsListFragment"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1"
        />
    
    <fragment
        android:id="@+id/teams_details_fragment"
        android:name="com.sokolovskiy.ukrbasketsuperleague.TeamDetailsFragment"
        android:layout_width="0dp"
    	android:layout_height="match_parent"
    	android:layout_weight="1.5" />
</LinearLayout>